<% configurations.each do |key, config| 
		 lines = config.desc.split(/\n/).collect do |line|
			 line = line.strip.gsub(/^#\s*/, '')
			 line.empty? ? nil : line
		 end.compact
	
		 lines.each do |line| %>
# <%= line %><% end %>
<%= config.default == nil ? '#' : ''%><%= yamlize({key.to_s => config.default}) %>

<% end %>
