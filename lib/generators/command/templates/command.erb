env = Tap::Env.instance
app = Tap::App.instance

#
# handle options
#

OptionParser.new do |opts|
  opts.separator ""
  opts.separator "options:"

  opts.on("-h", "--help", "Show this message") do
    opts.banner = Tap::Support::CommandLine.usage(__FILE__)
    puts opts
    exit
  end
  
end.parse!(ARGV)


