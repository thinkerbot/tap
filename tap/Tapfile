include Rap::Declarations

desc "run checks"
task :check, :pattern do |task, args|
  Dir.glob( File.join('test',  "**/#{args.pattern || '*'}_check.rb") ).each do |check_file|
    puts "=" * 80
    puts Lazydoc.usage(check_file)
    puts "=" * 80
    sh "ruby -w '#{check_file}'"
  end
end

desc "hello moon"
task :hello_moon do 
  puts "hello moon"
end