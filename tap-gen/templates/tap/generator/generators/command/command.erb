app = Tap::App.instance

#
# handle options
#

ConfigParser.new do |opts|
  opts.separator ""
  opts.separator "options:"

  opts.on("-h", "--help", "Show this message") do
    puts Lazydoc.usage(__FILE__)
    puts opts
    exit
  end
  
end.parse!(ARGV)

