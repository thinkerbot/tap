include Tap::Declarations

# Check::manifest run checks
class Check < Tap::FileTask
  def process(pattern="")
    Dir.glob( File.join('test',  "**/*#{pattern}*_check.rb") ).each do |check_file|
      puts "=" * 80
      puts Tap::Support::Lazydoc.usage(check_file)
      puts "=" * 80
      sh "ruby -w '#{check_file}'"
    end
  end
end

desc "hello moon"
task :hello_moon do 
  puts "hello moon"
end